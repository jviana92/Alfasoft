@page
@model Alfasoft.Pages.Customers.Create.IndexModel
@{
}

<h1>Add Customer</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Customer.Name">Name</label>
        <input asp-for="Customer.Name" class="form-control" required />
        <span asp-validation-for="Customer.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Customer.Contact">Contact</label>
        <input asp-for="Customer.Contact" class="form-control" required />
        <span asp-validation-for="Customer.Contact" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Customer.Email">Email</label>
        <input asp-for="Customer.Email" class="form-control" required />
        <span asp-validation-for="Customer.Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Customer</button>
</form>